<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 🌞 TEMA CLARO - RECURSOS POR DEFECTO -->

    <!-- Colores principales -->
    <Color x:Key="BackgroundColor">#F8F9FA</Color>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>

    <Color x:Key="ForegroundColor">#212529</Color>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>

    <Color x:Key="SecondaryBackgroundColor">#FFFFFF</Color>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>

    <Color x:Key="BorderColor">#DEE2E6</Color>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

    <!-- Color de acento -->
    <Color x:Key="AccentColor">#007ACC</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>

    <!-- TextBox -->
    <Color x:Key="TextBoxBackgroundColor">#FFFFFF</Color>
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="{StaticResource TextBoxBackgroundColor}"/>

    <Color x:Key="TextBoxForegroundColor">#000000</Color>
    <SolidColorBrush x:Key="TextBoxForegroundBrush" Color="{StaticResource TextBoxForegroundColor}"/>

    <!-- Header y Sidebar -->
    <Color x:Key="HeaderBackgroundColor">#F8F9FA</Color>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBackgroundColor}"/>

    <Color x:Key="SidebarBackgroundColor">#E9ECEF</Color>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}"/>

    <!-- Colores semánticos -->
    <Color x:Key="SuccessColor">#28A745</Color>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>

    <Color x:Key="WarningColor">#FFC107</Color>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>

    <Color x:Key="DangerColor">#DC3545</Color>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>

    <Color x:Key="InfoColor">#17A2B8</Color>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>

    <Color x:Key="MutedColor">#6C757D</Color>
    <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource MutedColor}"/>

</ResourceDictionary>