<UserControl x:Class="ClubManager.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FF2D2D30">

    <UserControl.Resources>
        <!-- Estilos -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatNumber" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="StatLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="StatIcon" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF007ACC"/>
            <Setter Property="Margin" Value="10,20,10,10"/>
        </Style>

        <Style x:Key="RecentItemBorder" TargetType="Border">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#FF1E1E1E" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="🏠 Dashboard" 
                                   FontSize="24" FontWeight="Bold" 
                                   Foreground="White" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding WelcomeMessage}" 
                                   FontSize="14" Foreground="#FFCCCCCC"/>
                        <TextBlock Text="{Binding LastUpdateText}" 
                                   FontSize="12" Foreground="#FF999999" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="🔄 Actualizar" 
                                Style="{StaticResource ModernButton}"
                                Command="{Binding RefreshCommand}" 
                                Margin="0,0,10,0"/>
                        <Button Content="📊 Resumen" 
                                Style="{StaticResource ModernButton}"
                                Command="{Binding ShowSummaryCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Estadísticas Principales -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Abonados -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="👥" Style="{StaticResource StatIcon}" Foreground="#FF007ACC"/>
                        <TextBlock Text="{Binding TotalAbonados}" 
                                   Style="{StaticResource StatNumber}" 
                                   Foreground="#FF007ACC"/>
                        <TextBlock Text="Total Abonados" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>

                <!-- Abonados Activos -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="✅" Style="{StaticResource StatIcon}" Foreground="#FF4CAF50"/>
                        <TextBlock Text="{Binding AbonadosActivos}" 
                                   Style="{StaticResource StatNumber}" 
                                   Foreground="#FF4CAF50"/>
                        <TextBlock Text="Activos (Pagados)" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>

                <!-- Abonados Inactivos -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="❌" Style="{StaticResource StatIcon}" Foreground="#FFF44336"/>
                        <TextBlock Text="{Binding AbonadosInactivos}" 
                                   Style="{StaticResource StatNumber}" 
                                   Foreground="#FFF44336"/>
                        <TextBlock Text="Inactivos (Pendientes)" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>

                <!-- Ingresos Estimados -->
                <Border Grid.Column="3" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="💰" Style="{StaticResource StatIcon}" Foreground="#FFFF9800"/>
                        <TextBlock Text="{Binding IngresosEstimados}" 
                                   Style="{StaticResource StatNumber}" 
                                   Foreground="#FFFF9800"/>
                        <TextBlock Text="Ingresos Estimados" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Estadísticas Secundarias -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Abonados Impresos -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="🖨️" Style="{StaticResource StatIcon}" Foreground="#FF9C27B0"/>
                        <TextBlock Text="{Binding AbonadosImpresos}" 
                                   Style="{StaticResource StatNumber}" 
                                   Foreground="#FF9C27B0"/>
                        <TextBlock Text="Abonados Impresos" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>

                <!-- Peñas Activas -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="🎪" Style="{StaticResource StatIcon}" Foreground="#FF00BCD4"/>
                        <TextBlock Text="{Binding PeñasActivas}" 
                                   Style="{StaticResource StatNumber}" 
                                   Foreground="#FF00BCD4"/>
                        <TextBlock Text="Peñas con Abonados" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>

                <!-- Tipos de Abono -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="🎫" Style="{StaticResource StatIcon}" Foreground="#FF8BC34A"/>
                        <TextBlock Text="{Binding TiposAbonoCount}" 
                                   Style="{StaticResource StatNumber}" 
                                   Foreground="#FF8BC34A"/>
                        <TextBlock Text="Tipos de Abono" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>

                <!-- Porcentaje de Pago -->
                <Border Grid.Column="3" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="📊" Style="{StaticResource StatIcon}" Foreground="#FFFF5722"/>
                        <TextBlock Text="{Binding PorcentajePago}" 
                                   Style="{StaticResource StatNumber}" 
                                   Foreground="#FFFF5722"/>
                        <TextBlock Text="% de Pago" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Sección de Actividad Reciente y Distribución -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Actividad Reciente -->
                <Border Grid.Column="0" Background="#FF1E1E1E" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="📜 Actividad Reciente" Style="{StaticResource SectionTitle}"/>

                        <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding ActividadReciente}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource RecentItemBorder}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Icono}" 
                                                           FontSize="16" 
                                                           VerticalAlignment="Center" 
                                                           Margin="0,0,10,0"/>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Accion}" 
                                                               Foreground="White" 
                                                               FontWeight="SemiBold" 
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Detalle}" 
                                                               Foreground="#FFCCCCCC" 
                                                               FontSize="12" 
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>

                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding TiempoTranscurrido}" 
                                                           Foreground="#FF999999" 
                                                           FontSize="11" 
                                                           VerticalAlignment="Top"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <Button Content="📋 Ver Historial Completo" 
                                Style="{StaticResource ModernButton}"
                                Command="{Binding ShowHistorialCommand}"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Distribución y Gráficos -->
                <Border Grid.Column="2" Background="#FF1E1E1E" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="📊 Distribución de Abonados" Style="{StaticResource SectionTitle}"/>

                        <!-- Distribución por Estado -->
                        <TextBlock Text="Por Estado de Pago:" 
                                   Foreground="White" FontWeight="SemiBold" 
                                   Margin="0,10,0,10"/>

                        <Grid Margin="0,0,0,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Barra Activos -->
                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Activos" 
                                           Foreground="#FF4CAF50" VerticalAlignment="Center"/>
                                <Border Grid.Column="1" Background="#FF3F3F46" Height="20" CornerRadius="10" Margin="10,0">
                                    <Border Background="#FF4CAF50" 
                                            HorizontalAlignment="Left"
                                            Width="{Binding BarraActivos}"
                                            CornerRadius="10"/>
                                </Border>
                                <TextBlock Grid.Column="2" Text="{Binding AbonadosActivos}" 
                                           Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Barra Inactivos -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Inactivos" 
                                           Foreground="#FFF44336" VerticalAlignment="Center"/>
                                <Border Grid.Column="1" Background="#FF3F3F46" Height="20" CornerRadius="10" Margin="10,0">
                                    <Border Background="#FFF44336" 
                                            HorizontalAlignment="Left"
                                            Width="{Binding BarraInactivos}"
                                            CornerRadius="10"/>
                                </Border>
                                <TextBlock Grid.Column="2" Text="{Binding AbonadosInactivos}" 
                                           Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>
                        </Grid>

                        <!-- Distribución por Peñas -->
                        <TextBlock Text="Top 5 Peñas:" 
                                   Foreground="White" FontWeight="SemiBold" 
                                   Margin="0,20,0,10"/>

                        <ItemsControl ItemsSource="{Binding TopPeñas}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Nombre}" 
                                                   Foreground="White" VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <Border Grid.Column="1" Background="#FF3F3F46" Height="16" CornerRadius="8" Margin="10,0">
                                            <Border Background="{Binding Color}" 
                                                    HorizontalAlignment="Left"
                                                    Width="{Binding BarWidth}"
                                                    CornerRadius="8"/>
                                        </Border>
                                        <TextBlock Grid.Column="2" Text="{Binding Count}" 
                                                   Foreground="White" VerticalAlignment="Center" 
                                                   HorizontalAlignment="Right" Margin="10,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Acciones Rápidas -->
                        <TextBlock Text="⚡ Acciones Rápidas:" 
                                   Foreground="White" FontWeight="SemiBold" 
                                   Margin="0,30,0,10"/>

                        <UniformGrid Columns="2" Margin="0,0,0,10">
                            <Button Content="➕ Nuevo Abonado" 
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding NewAbonadoCommand}"
                                    Margin="0,0,5,5"/>
                            <Button Content="📊 Estadísticas" 
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding ShowStatsCommand}"
                                    Margin="5,0,0,5"/>
                            <Button Content="🖨️ Pendientes" 
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding ShowPendientesCommand}"
                                    Margin="0,5,5,0"/>
                            <Button Content="📤 Exportar" 
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding ExportCommand}"
                                    Margin="5,5,0,0"/>
                        </UniformGrid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>