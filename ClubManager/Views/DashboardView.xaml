<UserControl x:Class="ClubManager.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <!-- Estilos específicos del Dashboard usando temas dinámicos -->
        <Style x:Key="RecentItemBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="SectionTitleDashboard" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Margin" Value="10,20,10,10"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Style="{StaticResource StatCard}" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="🏠 Dashboard" 
                                   FontSize="24" FontWeight="Bold" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding WelcomeMessage}" 
                                   FontSize="14" 
                                   Foreground="{DynamicResource MutedBrush}"/>
                        <TextBlock Text="{Binding LastUpdateText}" 
                                   FontSize="12" 
                                   Foreground="{DynamicResource MutedBrush}" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="🔄 Actualizar" 
                                Style="{StaticResource ModernButton}"
                                Command="{Binding RefreshCommand}" 
                                Margin="0,0,10,0"/>
                        <Button Content="📊 Resumen" 
                                Style="{StaticResource ModernButton}"
                                Command="{Binding ShowSummaryCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Estadísticas Principales -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Abonados -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="👥" Style="{StaticResource StatIcon}" 
                                   Foreground="{DynamicResource AccentBrush}"/>
                        <TextBlock Text="{Binding TotalAbonados}" 
                                   Style="{StaticResource StatNumber}" 
                                   Foreground="{DynamicResource AccentBrush}"/>
                        <TextBlock Text="Total Abonados" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>

                <!-- Abonados Activos -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="✅" Style="{StaticResource StatIcon}" 
                                   Foreground="{DynamicResource SuccessBrush}"/>
                        <TextBlock Text="{Binding AbonadosActivos}" 
                                   Style="{StaticResource StatNumber}" 
                                   Foreground="{DynamicResource SuccessBrush}"/>
                        <TextBlock Text="Activos (Pagados)" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>

                <!-- Abonados Inactivos -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="❌" Style="{StaticResource StatIcon}" 
                                   Foreground="{DynamicResource DangerBrush}"/>
                        <TextBlock Text="{Binding AbonadosInactivos}" 
                                   Style="{StaticResource StatNumber}" 
                                   Foreground="{DynamicResource DangerBrush}"/>
                        <TextBlock Text="Inactivos (Pendientes)" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>

                <!-- Ingresos Estimados -->
                <Border Grid.Column="3" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="💰" Style="{StaticResource StatIcon}" 
                                   Foreground="{DynamicResource WarningBrush}"/>
                        <TextBlock Text="{Binding IngresosEstimados}" 
                                   Style="{StaticResource StatNumber}" 
                                   Foreground="{DynamicResource WarningBrush}"/>
                        <TextBlock Text="Ingresos Estimados" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Estadísticas Secundarias -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Abonados Impresos -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="🖨️" Style="{StaticResource StatIcon}" 
                                   Foreground="#FF9C27B0"/>
                        <TextBlock Text="{Binding AbonadosImpresos}" 
                                   Style="{StaticResource StatNumber}" 
                                   Foreground="#FF9C27B0"/>
                        <TextBlock Text="Abonados Impresos" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>

                <!-- Peñas Activas -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="🎪" Style="{StaticResource StatIcon}" 
                                   Foreground="{DynamicResource InfoBrush}"/>
                        <TextBlock Text="{Binding PeñasActivas}" 
                                   Style="{StaticResource StatNumber}" 
                                   Foreground="{DynamicResource InfoBrush}"/>
                        <TextBlock Text="Peñas con Abonados" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>

                <!-- Tipos de Abono -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="🎫" Style="{StaticResource StatIcon}" 
                                   Foreground="#FF8BC34A"/>
                        <TextBlock Text="{Binding TiposAbonoCount}" 
                                   Style="{StaticResource StatNumber}" 
                                   Foreground="#FF8BC34A"/>
                        <TextBlock Text="Tipos de Abono" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>

                <!-- Porcentaje de Pago -->
                <Border Grid.Column="3" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="📊" Style="{StaticResource StatIcon}" 
                                   Foreground="#FFFF5722"/>
                        <TextBlock Text="{Binding PorcentajePago}" 
                                   Style="{StaticResource StatNumber}" 
                                   Foreground="#FFFF5722"/>
                        <TextBlock Text="% de Pago" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Sección de Actividad Reciente y Distribución -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Actividad Reciente -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="📜 Actividad Reciente" 
                                   Style="{StaticResource SectionTitleDashboard}"/>

                        <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding ActividadReciente}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource RecentItemBorder}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Icono}" 
                                                           FontSize="16" 
                                                           VerticalAlignment="Center" 
                                                           Margin="0,0,10,0"/>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Accion}" 
                                                               Foreground="{DynamicResource ForegroundBrush}" 
                                                               FontWeight="SemiBold" 
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Detalle}" 
                                                               Foreground="{DynamicResource MutedBrush}" 
                                                               FontSize="12" 
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>

                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding TiempoTranscurrido}" 
                                                           Foreground="{DynamicResource MutedBrush}" 
                                                           FontSize="11" 
                                                           VerticalAlignment="Top"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <Button Content="📋 Ver Historial Completo" 
                                Style="{StaticResource ModernButton}"
                                Command="{Binding ShowHistorialCommand}"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Distribución y Gráficos -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="📊 Distribución de Abonados" 
                                   Style="{StaticResource SectionTitleDashboard}"/>

                        <!-- Distribución por Estado -->
                        <TextBlock Text="Por Estado de Pago:" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   FontWeight="SemiBold" 
                                   Margin="0,10,0,10"/>

                        <Grid Margin="0,0,0,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Barra Activos -->
                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Activos" 
                                           Foreground="{DynamicResource SuccessBrush}" 
                                           VerticalAlignment="Center"/>
                                <Border Grid.Column="1" 
                                        Background="{DynamicResource BorderBrush}" 
                                        Height="20" CornerRadius="10" Margin="10,0">
                                    <Border Background="{DynamicResource SuccessBrush}" 
                                            HorizontalAlignment="Left"
                                            Width="{Binding BarraActivos}"
                                            CornerRadius="10"/>
                                </Border>
                                <TextBlock Grid.Column="2" Text="{Binding AbonadosActivos}" 
                                           Foreground="{DynamicResource ForegroundBrush}" 
                                           VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Barra Inactivos -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Inactivos" 
                                           Foreground="{DynamicResource DangerBrush}" 
                                           VerticalAlignment="Center"/>
                                <Border Grid.Column="1" 
                                        Background="{DynamicResource BorderBrush}" 
                                        Height="20" CornerRadius="10" Margin="10,0">
                                    <Border Background="{DynamicResource DangerBrush}" 
                                            HorizontalAlignment="Left"
                                            Width="{Binding BarraInactivos}"
                                            CornerRadius="10"/>
                                </Border>
                                <TextBlock Grid.Column="2" Text="{Binding AbonadosInactivos}" 
                                           Foreground="{DynamicResource ForegroundBrush}" 
                                           VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>
                        </Grid>

                        <!-- Distribución por Peñas -->
                        <TextBlock Text="Top 5 Peñas:" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   FontWeight="SemiBold" 
                                   Margin="0,20,0,10"/>

                        <ItemsControl ItemsSource="{Binding TopPeñas}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Nombre}" 
                                                   Foreground="{DynamicResource ForegroundBrush}" 
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <Border Grid.Column="1" 
                                                Background="{DynamicResource BorderBrush}" 
                                                Height="16" CornerRadius="8" Margin="10,0">
                                            <Border Background="{Binding Color}" 
                                                    HorizontalAlignment="Left"
                                                    Width="{Binding BarWidth}"
                                                    CornerRadius="8"/>
                                        </Border>
                                        <TextBlock Grid.Column="2" Text="{Binding Count}" 
                                                   Foreground="{DynamicResource ForegroundBrush}" 
                                                   VerticalAlignment="Center" 
                                                   HorizontalAlignment="Right" Margin="10,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Acciones Rápidas -->
                        <TextBlock Text="⚡ Acciones Rápidas:" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   FontWeight="SemiBold" 
                                   Margin="0,30,0,10"/>

                        <UniformGrid Columns="2" Margin="0,0,0,10">
                            <Button Content="➕ Nuevo Abonado" 
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding NewAbonadoCommand}"
                                    Margin="0,0,5,5"/>
                            <Button Content="📊 Estadísticas" 
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding ShowStatsCommand}"
                                    Margin="5,0,0,5"/>
                            <Button Content="🖨️ Pendientes" 
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding ShowPendientesCommand}"
                                    Margin="0,5,5,0"/>
                            <Button Content="📤 Exportar" 
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding ExportCommand}"
                                    Margin="5,5,0,0"/>
                        </UniformGrid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>