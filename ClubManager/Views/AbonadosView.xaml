<UserControl x:Class="ClubManager.Views.AbonadosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:ClubManager.Views"
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <!-- Convertidores para estados -->
        <local:EstadoToColorConverter x:Key="EstadoToColorConverter"/>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <local:BoolToTextConverter x:Key="BoolToTextConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SecondaryBackgroundBrush}" 
                CornerRadius="8,8,0,0" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Label Content="👥 Gestión de Abonados" 
                           Foreground="{DynamicResource ForegroundBrush}" 
                           FontSize="20" FontWeight="Bold" Margin="0"/>
                    <TextBlock Text="{Binding SubTitle}" 
                               Foreground="{DynamicResource MutedBrush}" 
                               FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="➕ Nuevo Abonado" 
                            Style="{StaticResource SuccessButton}"
                            Command="{Binding NewAbonadoCommand}"
                            IsEnabled="{Binding CanEdit}"
                            Margin="0,0,10,0"/>
                    <Button Content="📊 Estadísticas" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding ShowStatsCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="🖨️ Imprimir" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding PrintCommand}"
                            IsEnabled="{Binding HasSelectedAbonado}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filtros y Búsqueda -->
        <Border Grid.Row="1" 
                Background="{DynamicResource BorderBrush}" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Label Content="🔍 Buscar:" 
                           Foreground="{DynamicResource ForegroundBrush}" 
                           FontSize="12" Margin="0"/>
                    <TextBox x:Name="txtBuscar" 
                             Style="{StaticResource ModernTextBox}"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Buscar por nombre, apellidos, DNI o número de socio"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <Label Content="Estado:" 
                           Foreground="{DynamicResource ForegroundBrush}" 
                           FontSize="12" Margin="0"/>
                    <ComboBox Style="{StaticResource ModernComboBox}"
                              ItemsSource="{Binding EstadoFilter}"
                              SelectedValue="{Binding SelectedEstadoFilter}"
                              DisplayMemberPath="Display"
                              SelectedValuePath="Value"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="15,0,0,0">
                    <Label Content="Peña:" 
                           Foreground="{DynamicResource ForegroundBrush}" 
                           FontSize="12" Margin="0"/>
                    <ComboBox Style="{StaticResource ModernComboBox}"
                              ItemsSource="{Binding PeñasFilter}"
                              SelectedValue="{Binding SelectedPeñaFilter}"
                              DisplayMemberPath="Nombre"
                              SelectedValuePath="Id"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Margin="15,0,0,0">
                    <Label Content="Tipo Abono:" 
                           Foreground="{DynamicResource ForegroundBrush}" 
                           FontSize="12" Margin="0"/>
                    <ComboBox Style="{StaticResource ModernComboBox}"
                              ItemsSource="{Binding TiposAbonoFilter}"
                              SelectedValue="{Binding SelectedTipoAbonoFilter}"
                              DisplayMemberPath="Nombre"
                              SelectedValuePath="Id"/>
                </StackPanel>

                <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="🗑️ Limpiar" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding ClearFiltersCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="📤 Exportar" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding ExportCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="2" 
                Background="{DynamicResource SecondaryBackgroundBrush}" 
                CornerRadius="0,0,8,8" 
                Margin="0,1,0,0">
            <DataGrid x:Name="dgAbonados"
                      Style="{StaticResource DataGridStyle}"
                      ItemsSource="{Binding AbonadosFiltered}"
                      SelectedItem="{Binding SelectedAbonado}"
                      ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}">

                <DataGrid.Columns>
                    <!-- Número de Socio -->
                    <DataGridTextColumn Header="Nº Socio" 
                                        Binding="{Binding NumeroSocio}" 
                                        Width="80"/>

                    <!-- Nombre Completo -->
                    <DataGridTextColumn Header="Nombre Completo" 
                                        Binding="{Binding NombreCompleto}" 
                                        Width="200"/>

                    <!-- DNI -->
                    <DataGridTextColumn Header="DNI" 
                                        Binding="{Binding DNI}" 
                                        Width="100"/>

                    <!-- Estado con color -->
                    <DataGridTemplateColumn Header="Estado" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Estado, Converter={StaticResource EstadoToColorConverter}}" 
                                        CornerRadius="12" Padding="8,4">
                                    <TextBlock Text="{Binding EstadoTexto}" 
                                               Foreground="White" 
                                               FontSize="10" 
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Peña -->
                    <DataGridTextColumn Header="Peña" 
                                        Binding="{Binding Peña.Nombre}" 
                                        Width="120"/>

                    <!-- Tipo de Abono -->
                    <DataGridTextColumn Header="Tipo Abono" 
                                        Binding="{Binding TipoAbono.Nombre}" 
                                        Width="120"/>

                    <!-- Precio -->
                    <DataGridTextColumn Header="Precio" 
                                        Binding="{Binding TipoAbono.Precio, StringFormat='{}{0:C}'}" 
                                        Width="80"/>

                    <!-- Impreso -->
                    <DataGridTemplateColumn Header="Impreso" Width="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Impreso, Converter={StaticResource BoolToColorConverter}}" 
                                        CornerRadius="4" Padding="4">
                                    <TextBlock Text="{Binding Impreso, Converter={StaticResource BoolToTextConverter}}" 
                                               Foreground="White" 
                                               FontSize="10"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Código de Barras -->
                    <DataGridTextColumn Header="Código Barras" 
                                        Binding="{Binding CodigoBarras}" 
                                        Width="150"/>

                    <!-- Acciones -->
                    <DataGridTemplateColumn Header="Acciones" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="✏️" 
                                            Style="{StaticResource ModernButton}"
                                            Command="{Binding DataContext.EditAbonadoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding DataContext.CanEdit, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            ToolTip="Editar"
                                            Margin="2" Padding="6,4"/>
                                    <Button Content="🗑️" 
                                            Style="{StaticResource DangerButton}"
                                            Command="{Binding DataContext.DeleteAbonadoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding DataContext.CanEdit, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            ToolTip="Eliminar"
                                            Margin="2" Padding="6,4"/>
                                    <Button Content="🖨️" 
                                            Style="{StaticResource ModernButton}"
                                            Command="{Binding DataContext.MarkAsPrintedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding DataContext.CanEdit, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            ToolTip="Marcar como impreso"
                                            Margin="2" Padding="6,4"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>