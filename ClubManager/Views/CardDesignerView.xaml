<UserControl x:Class="ClubManager.Views.CardDesignerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:ClubManager.Converters"
             xmlns:viewmodels="clr-namespace:ClubManager.ViewModels"
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <!-- Solo converters necesarios para fuentes y colores -->
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
        <converters:BooleanToFontWeightConverter x:Key="BooleanToFontWeightConverter"/>
        <converters:BooleanToFontStyleConverter x:Key="BooleanToFontStyleConverter"/>

        <!-- DataTemplate para elementos de tarjeta -->
        <DataTemplate x:Key="ElementoTarjetaTemplate">
            <Border Background="LightBlue" 
                    BorderBrush="Blue" 
                    BorderThickness="1" 
                    CornerRadius="3"
                    Margin="2">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="{Binding Tipo}" FontWeight="Bold" Margin="0,0,5,0"/>
                    <TextBlock Text="-"/>
                    <TextBlock Text="{Binding Id}" FontSize="10" Foreground="Gray"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- Estilos específicos para el diseñador -->
        <Style x:Key="ModernLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="InfoBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Brush para TextBox background -->
        <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="{DynamicResource SecondaryBackgroundColor}"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" 
                Background="{DynamicResource AccentBrush}" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="🎨 Diseñador de Tarjetas" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Diseña y personaliza las tarjetas de abonado" 
                               FontSize="14" 
                               Foreground="White" Opacity="0.8"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="{Binding EstadoActual}" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Panel Izquierdo - Herramientas -->
        <Border Grid.Row="1" Grid.Column="0" 
                Background="{DynamicResource SecondaryBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,1,0">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">

                    <!-- Plantilla Actual -->
                    <GroupBox Header="📄 Plantilla Actual" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <TextBlock Text="Nombre:" Style="{StaticResource ModernLabel}"/>
                            <TextBox Text="{Binding PlantillaActual.Nombre}" 
                                     Style="{StaticResource ModernTextBox}"
                                     Margin="0,0,0,10"/>

                            <TextBlock Text="Descripción:" Style="{StaticResource ModernLabel}"/>
                            <TextBox Text="{Binding PlantillaActual.Descripcion}" 
                                     Style="{StaticResource ModernTextBox}"
                                     Height="60" 
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Herramientas -->
                    <GroupBox Header="🔧 Herramientas" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <Button Content="📝 Agregar Texto" 
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding AgregarTextoCommand}"
                                    Margin="0,0,0,5"/>

                            <Button Content="🖼️ Agregar Imagen" 
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding AgregarImagenCommand}"
                                    Margin="0,0,0,5"/>

                            <Button Content="📊 Agregar Código de Barras" 
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding AgregarCodigoBarrasCommand}"
                                    Margin="0,0,0,5"/>

                            <Button Content="🏷️ Agregar Campo Dinámico" 
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding AgregarCampoDinamicoCommand}"
                                    Margin="0,0,0,5"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Elementos -->
                    <GroupBox Header="📋 Elementos" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <TextBlock Text="Elementos en la tarjeta:" 
                                       Style="{StaticResource ModernLabel}"/>

                            <ListBox ItemsSource="{Binding ElementosActuales}"
                                     SelectedItem="{Binding ElementoSeleccionado}"
                                     ItemTemplate="{StaticResource ElementoTarjetaTemplate}"
                                     Height="150"
                                     Background="{StaticResource TextBoxBackgroundBrush}"
                                     BorderBrush="{DynamicResource BorderBrush}"
                                     BorderThickness="1"/>

                            <Button Content="🗑️ Eliminar Elemento" 
                                    Style="{StaticResource DangerButton}"
                                    Command="{Binding EliminarElementoCommand}"
                                    Margin="0,5,0,0"
                                    IsEnabled="{Binding TieneElementoSeleccionado}"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Acciones de Archivo -->
                    <GroupBox Header="💾 Archivo" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <Button Content="📂 Nueva Plantilla" 
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding NuevaPlantillaCommand}"
                                    Margin="0,0,0,5"/>

                            <Button Content="💾 Guardar Plantilla" 
                                    Style="{StaticResource SuccessButton}"
                                    Command="{Binding GuardarPlantillaCommand}"
                                    Margin="0,0,0,5"/>

                            <Button Content="📁 Cargar Plantilla" 
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding CargarPlantillaCommand}"
                                    Margin="0,0,0,5"/>

                            <Button Content="🗂️ Gestionar Plantillas" 
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding GestionarPlantillasCommand}"
                                    Margin="0,0,0,5"/>
                        </StackPanel>
                    </GroupBox>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Panel Central - Vista Previa -->
        <Grid Grid.Row="1" Grid.Column="1" Background="{DynamicResource BackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Toolbar de Vista Previa -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="15,10">

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Vista Previa:" 
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Margin="0,0,15,0"/>

                    <Button Content="🔍 Zoom In" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding ZoomInCommand}"
                            Width="80" Height="30"
                            Margin="0,0,5,0"/>

                    <Button Content="🔍 Zoom Out" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding ZoomOutCommand}"
                            Width="80" Height="30"
                            Margin="0,0,5,0"/>

                    <Button Content="📐 Ajustar" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding FitToViewCommand}"
                            Width="80" Height="30"
                            Margin="0,0,15,0"/>

                    <CheckBox Content="📏 Mostrar Regla" 
                              Style="{StaticResource ModernCheckBox}"
                              IsChecked="{Binding MostrarRegla}"/>

                    <CheckBox Content="⊞ Mostrar Grilla" 
                              Style="{StaticResource ModernCheckBox}"
                              IsChecked="{Binding MostrarGrilla}"
                              Margin="15,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Área de Diseño -->
            <Border Grid.Row="1" Background="#F5F5F5" Margin="20">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto">

                    <Border Background="White" 
                            Width="{Binding PlantillaActual.Ancho}" 
                            Height="{Binding PlantillaActual.Alto}"
                            BorderBrush="Black" 
                            BorderThickness="1"
                            Margin="50">

                        <!-- Contenido de la tarjeta -->
                        <Canvas Name="CanvasDiseno" Background="Transparent">

                            <!-- Grilla de fondo (opcional) -->
                            <Grid Width="{Binding PlantillaActual.Ancho}"
                                  Height="{Binding PlantillaActual.Alto}">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding MostrarGrilla}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.Background>
                                    <DrawingBrush TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
                                        <DrawingBrush.Drawing>
                                            <GeometryDrawing>
                                                <GeometryDrawing.Geometry>
                                                    <RectangleGeometry Rect="0,0,20,20"/>
                                                </GeometryDrawing.Geometry>
                                                <GeometryDrawing.Pen>
                                                    <Pen Brush="LightGray" Thickness="0.5"/>
                                                </GeometryDrawing.Pen>
                                            </GeometryDrawing>
                                        </DrawingBrush.Drawing>
                                    </DrawingBrush>
                                </Grid.Background>
                            </Grid>

                            <!-- Elementos de la tarjeta se renderizan aquí -->
                            <TextBlock Text="Vista previa de la tarjeta"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="16"
                                       Foreground="Gray">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TieneElementos}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                        </Canvas>
                    </Border>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Panel Derecho - Propiedades -->
        <Border Grid.Row="1" Grid.Column="2" 
                Background="{DynamicResource SecondaryBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1,0,0,0">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">

                    <!-- Propiedades del Elemento Seleccionado -->
                    <GroupBox Header="⚙️ Propiedades" 
                              Margin="0,0,0,15">
                        <GroupBox.Style>
                            <Style TargetType="GroupBox">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TieneElementoSeleccionado}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </GroupBox.Style>

                        <StackPanel Margin="10">

                            <!-- Propiedades de Posición -->
                            <TextBlock Text="Posición:" Style="{StaticResource SectionTitle}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="X:" Style="{StaticResource ModernLabel}"/>
                                    <TextBox Text="{Binding ElementoSeleccionado.X}" 
                                             Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Y:" Style="{StaticResource ModernLabel}"/>
                                    <TextBox Text="{Binding ElementoSeleccionado.Y}" 
                                             Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Propiedades de Tamaño -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Ancho:" Style="{StaticResource ModernLabel}"/>
                                    <TextBox Text="{Binding ElementoSeleccionado.Ancho}" 
                                             Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Alto:" Style="{StaticResource ModernLabel}"/>
                                    <TextBox Text="{Binding ElementoSeleccionado.Alto}" 
                                             Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Propiedades específicas de texto -->
                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding EsElementoTexto}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <TextBlock Text="Texto:" Style="{StaticResource SectionTitle}" Margin="0,15,0,5"/>

                                <!-- Solo mostrar si es elemento de texto -->
                                <TextBlock Text="Contenido:" Style="{StaticResource ModernLabel}"/>
                                <TextBox Text="{Binding ElementoTextoSeleccionado.Texto}"
                                         Style="{StaticResource ModernTextBox}"
                                         Height="60" 
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"/>

                                <TextBlock Text="Fuente:" Style="{StaticResource ModernLabel}"/>
                                <ComboBox SelectedValue="{Binding ElementoTextoSeleccionado.FontFamily}"
                                          Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="Arial"/>
                                    <ComboBoxItem Content="Times New Roman"/>
                                    <ComboBoxItem Content="Calibri"/>
                                    <ComboBoxItem Content="Verdana"/>
                                </ComboBox>

                                <TextBlock Text="Tamaño:" Style="{StaticResource ModernLabel}"/>
                                <TextBox Text="{Binding ElementoTextoSeleccionado.FontSize}" 
                                         Style="{StaticResource ModernTextBox}"/>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <CheckBox Content="Negrita" 
                                              IsChecked="{Binding ElementoTextoSeleccionado.IsBold}"
                                              Style="{StaticResource ModernCheckBox}" 
                                              Margin="0,0,15,0"/>
                                    <CheckBox Content="Cursiva" 
                                              IsChecked="{Binding ElementoTextoSeleccionado.IsItalic}"
                                              Style="{StaticResource ModernCheckBox}"/>
                                </StackPanel>

                            </StackPanel>

                        </StackPanel>
                    </GroupBox>

                    <!-- Información -->
                    <Border Style="{StaticResource InfoBorder}">
                        <StackPanel>
                            <TextBlock Text="💡 Información" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="• Selecciona un elemento para ver sus propiedades" 
                                       Foreground="White" 
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="• Usa las herramientas de la izquierda para agregar elementos" 
                                       Foreground="White" 
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="• Guarda tu plantilla para reutilizarla" 
                                       Foreground="White" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Grid.ColumnSpan="3" 
                Background="{DynamicResource SecondaryBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0" 
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding EstadoActual}" 
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource MutedBrush}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="👁️ Vista Previa" 
                            Style="{StaticResource ModernButton}" 
                            Command="{Binding VistaPreviaCommand}"
                            Margin="0,0,10,0"/>

                    <Button Content="🖨️ Imprimir Prueba" 
                            Style="{StaticResource ModernButton}" 
                            Command="{Binding ImprimirPruebaCommand}"
                            Margin="0,0,10,0"/>

                    <Button Content="✅ Aplicar Plantilla" 
                            Style="{StaticResource SuccessButton}"
                            Command="{Binding AplicarPlantillaCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>