<Window x:Class="ClubManager.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClubManager - Iniciar Sesión" 
        Height="590" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Border CornerRadius="15" Background="{DynamicResource BackgroundBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="5" BlurRadius="15"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header con botón cerrar -->
            <Border Grid.Row="0" Background="{DynamicResource AccentBrush}" 
                    CornerRadius="15,15,0,0" Height="40">
                <Grid>
                    <TextBlock Text="ClubManager" 
                               FontWeight="Bold" FontSize="14" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                    <Button Content="✕" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Width="30" Height="30" 
                            Margin="5"
                            Background="Transparent" 
                            Foreground="White" 
                            BorderThickness="0" 
                            FontSize="16"
                            FontWeight="Bold"
                            Click="CloseButton_Click"
                            Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- Contenido principal -->
            <Grid Grid.Row="1" Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="0"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <Border Grid.Row="0" 
                        Width="80" Height="80" 
                        Background="{DynamicResource AccentBrush}" 
                        CornerRadius="40" 
                        HorizontalAlignment="Center">
                    <TextBlock Text="🏟️" FontSize="35" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               Foreground="White"/>
                </Border>

                <!-- Título -->
                <TextBlock Grid.Row="2" 
                           Text="Bienvenido" 
                           FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Foreground="{DynamicResource ForegroundBrush}"/>

                <!-- Subtítulo -->
                <TextBlock Grid.Row="4" 
                           Text="Ingresa tus credenciales para continuar" 
                           FontSize="14" 
                           HorizontalAlignment="Center" 
                           Foreground="{DynamicResource MutedBrush}"/>

                <!-- Campo Usuario -->
                <StackPanel Grid.Row="6">
                    <Label Content="Usuario:" 
                           Foreground="{DynamicResource ForegroundBrush}" 
                           FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBox}"
                             Padding="5"
                             Height="40" FontSize="14"
                             IsEnabled="True"/>
                </StackPanel>

                <!-- Campo Contraseña -->
                <StackPanel Grid.Row="8">
                    <Label Content="Contraseña:" 
                           Foreground="{DynamicResource ForegroundBrush}" 
                           FontWeight="SemiBold"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 Style="{StaticResource ModernPasswordBox}"
                                 Padding="5"
                                 Height="40" FontSize="14"
                                 IsEnabled="True"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>
                </StackPanel>

                <!-- Mensaje de error -->
                <TextBlock Grid.Row="12" 
                           Text="{Binding ErrorMessage}" 
                           Foreground="{DynamicResource DangerBrush}" 
                           FontSize="12" 
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           Visibility="{Binding ErrorMessage}"/>

                <!-- Botones -->
                <StackPanel Grid.Row="14" Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button Content="Iniciar Sesión" 
                            Style="{StaticResource AccentButton}" 
                            Width="120" Height="40"
                            Command="{Binding LoginCommand}"
                            IsDefault="True"/>
                    <Button Content="Cancelar" 
                            Style="{StaticResource ModernButton}" 
                            Width="100" Height="40" 
                            Margin="10,0,0,0"
                            Command="{Binding CancelCommand}"/>
                </StackPanel>

                <!-- Indicador de carga -->
                <StackPanel Grid.Row="15" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Bottom"
                            Visibility="Collapsed">
                    <ProgressBar IsIndeterminate="True" 
                                 Width="200" Height="4" 
                                 Margin="0,10"/>
                    <TextBlock Text="Iniciando sesión..." 
                               FontSize="12" 
                               Foreground="{DynamicResource MutedBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>