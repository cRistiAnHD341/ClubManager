<Window x:Class="ClubManager.Views.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activación de Licencia - Club Manager" Height="758" Width="1062"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <Label Content="🔐 Activación de Licencia" 
                   Style="{StaticResource TitleLabel}"/>
            <TextBlock Text="Introduce una clave de licencia válida para continuar" 
                       HorizontalAlignment="Center" 
                       Foreground="{DynamicResource MutedBrush}" 
                       FontSize="14" 
                       Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Contenido Principal -->
        <Border Grid.Row="1" Style="{StaticResource ModernBorder}">
            <StackPanel>
                <Label Content="Clave de Licencia:" Style="{StaticResource ModernLabel}"/>
                <TextBox x:Name="txtLicenseKey" Style="{StaticResource ModernTextBox}"
                         Text="{Binding LicenseKey, UpdateSourceTrigger=PropertyChanged}" 
                         Height="100" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,5,0,15"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Button Content="📂 Cargar desde archivo" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding LoadFromFileCommand}" 
                            Margin="0,0,10,0"/>
                    <Button Content="📋 Pegar desde portapapeles" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding PasteFromClipboardCommand}"/>
                </StackPanel>

                <Separator Background="{DynamicResource BorderBrush}" Margin="0,15"/>

                <Label Content="Estado de la Licencia:" Style="{StaticResource ModernLabel}"/>
                <Border Style="{StaticResource InfoBorder}">
                    <StackPanel>
                        <TextBlock Text="{Binding StatusMessage}" 
                                   FontSize="12" FontWeight="SemiBold" Margin="0,5,0,0"
                                   Foreground="{Binding StatusColor}"/>
                        <TextBlock Text="{Binding LicenseDetails}" 
                                   FontSize="12" FontWeight="SemiBold" Margin="0,5,0,0"
                                   Foreground="{DynamicResource MutedBrush}"
                                   Visibility="{Binding ShowDetails}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Información adicional -->
        <Border Grid.Row="2" Style="{StaticResource InfoBorder}" Margin="0,20,0,20">
            <StackPanel>
                <TextBlock Text="ℹ️ Información importante:" 
                           Foreground="{DynamicResource AccentBrush}" 
                           FontWeight="SemiBold" 
                           FontSize="14"/>
                <TextBlock TextWrapping="Wrap" 
                           Foreground="{DynamicResource MutedBrush}" 
                           FontSize="12" 
                           Margin="0,5,0,0">
                    <Run Text="• Si tu licencia ha expirado, el programa funcionará en modo solo lectura"/>
                    <LineBreak/>
                    <Run Text="• Contacta con el administrador para obtener una nueva clave de licencia"/>
                    <LineBreak/>
                    <Run Text="• La clave debe ser generada por el programa oficial de generación de licencias"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Botones -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="❌ Cancelar" 
                    Style="{StaticResource CancelButton}"
                    IsCancel="True"
                    Click="CancelButton_Click" 
                    Margin="0,0,10,0"/>
            <Button Content="✅ Activar Licencia" 
                    Style="{StaticResource ModernButton}"
                    IsDefault="True"
                    Command="{Binding ActivateLicenseCommand}"/>
        </StackPanel>
    </Grid>
</Window>