<Window x:Class="ClubManager.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuración del Club" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <Label Content="⚙️ Configuración del Club" Style="{StaticResource TitleLabel}"/>
            <TextBlock Text="Personaliza la configuración de tu club deportivo" 
                       HorizontalAlignment="Center" 
                       Foreground="{DynamicResource MutedBrush}" 
                       FontSize="14" 
                       Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Contenido Principal - Tabs -->
        <TabControl Grid.Row="1" 
                    Background="{DynamicResource BackgroundBrush}" 
                    BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabControl">
                    <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
                </Style>
            </TabControl.Resources>

            <!-- Tab: Información del Club -->
            <TabItem Header="🏢 Club" Style="{StaticResource TabStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                    <StackPanel>
                        <Border Style="{StaticResource ModernBorder}" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Información del Club -->
                                <StackPanel Grid.Column="0">
                                    <Label Content="📋 Información Básica" Style="{StaticResource SectionTitle}"/>

                                    <Label Content="Nombre del Club:" Style="{StaticResource ModernLabel}"/>
                                    <TextBox Style="{StaticResource ModernTextBox}"
                                             Text="{Binding NombreClub, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,5,0,15"/>

                                    <Label Content="Temporada Actual:" Style="{StaticResource ModernLabel}"/>
                                    <TextBox Style="{StaticResource ModernTextBox}"
                                             Text="{Binding TemporadaActual, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,5,0,15"/>

                                    <Label Content="Dirección:" Style="{StaticResource ModernLabel}"/>
                                    <TextBox Style="{StaticResource ModernTextBox}"
                                             Text="{Binding DireccionClub, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,5,0,15"/>

                                    <Label Content="Teléfono:" Style="{StaticResource ModernLabel}"/>
                                    <TextBox Style="{StaticResource ModernTextBox}"
                                             Text="{Binding TelefonoClub, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,5,0,15"/>

                                    <Label Content="Email:" Style="{StaticResource ModernLabel}"/>
                                    <TextBox Style="{StaticResource ModernTextBox}"
                                             Text="{Binding EmailClub, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,5,0,15"/>

                                    <Label Content="Sitio Web:" Style="{StaticResource ModernLabel}"/>
                                    <TextBox Style="{StaticResource ModernTextBox}"
                                             Text="{Binding WebClub, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,5,0,15"/>
                                </StackPanel>

                                <!-- Logo del Club -->
                                <StackPanel Grid.Column="2">
                                    <Label Content="🎨 Logo del Club" Style="{StaticResource SectionTitle}"/>

                                    <Border Background="{DynamicResource BorderBrush}" 
                                            BorderBrush="{DynamicResource AccentBrush}" 
                                            BorderThickness="2" 
                                            CornerRadius="10" 
                                            Height="200" 
                                            Width="200"
                                            Margin="0,5,0,15">
                                        <Grid>
                                            <Image Source="{Binding LogoClub}" 
                                                   Stretch="Uniform"
                                                   Visibility="{Binding HasLogo}"/>
                                            <TextBlock Text="🏢" 
                                                       FontSize="72" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource AccentBrush}"
                                                       Visibility="{Binding NoLogo}"/>
                                        </Grid>
                                    </Border>

                                    <Button Content="📂 Seleccionar Logo" 
                                            Style="{StaticResource ModernButton}"
                                            Command="{Binding SelectLogoCommand}"
                                            Margin="0,0,0,10"/>

                                    <Button Content="🗑️ Quitar Logo" 
                                            Style="{StaticResource CancelButton}"
                                            Command="{Binding RemoveLogoCommand}"
                                            IsEnabled="{Binding CanRemoveLogo}"/>

                                    <TextBlock Text="Formatos: PNG, JPG, GIF" 
                                               Foreground="{DynamicResource MutedBrush}" 
                                               FontSize="12" 
                                               HorizontalAlignment="Center"
                                               Margin="0,10,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Estadísticas del Club -->
                        <Border Style="{StaticResource ModernBorder}">
                            <StackPanel>
                                <Label Content="📊 Estadísticas Actuales" Style="{StaticResource SectionTitle}"/>

                                <UniformGrid Columns="3" Margin="0,10">
                                    <StackPanel Margin="10">
                                        <TextBlock Text="{Binding TotalAbonados}" 
                                                   FontSize="36" FontWeight="Bold" 
                                                   Foreground="{DynamicResource AccentBrush}" 
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Total Abonados" 
                                                   Foreground="{DynamicResource MutedBrush}" 
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Margin="10">
                                        <TextBlock Text="{Binding AbonadosActivos}" 
                                                   FontSize="36" FontWeight="Bold" 
                                                   Foreground="{DynamicResource SuccessBrush}" 
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Activos" 
                                                   Foreground="{DynamicResource MutedBrush}" 
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Margin="10">
                                        <TextBlock Text="{Binding TotalPeñas}" 
                                                   FontSize="36" FontWeight="Bold" 
                                                   Foreground="{DynamicResource WarningBrush}" 
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Peñas" 
                                                   Foreground="{DynamicResource MutedBrush}" 
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </UniformGrid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Tab: Sistema -->
            <TabItem Header="🔧 Sistema" Style="{StaticResource TabStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                    <StackPanel>
                        <!-- Configuraciones del Sistema -->
                        <Border Style="{StaticResource ModernBorder}" Margin="0,0,0,20">
                            <StackPanel>
                                <Label Content="🔧 Configuraciones del Sistema" Style="{StaticResource SectionTitle}"/>

                                <CheckBox Style="{StaticResource ModernCheckBox}"
                                          IsChecked="{Binding AutoBackup}"
                                          Content="💾 Crear backup automático al iniciar nueva temporada"/>

                                <CheckBox Style="{StaticResource ModernCheckBox}"
                                          IsChecked="{Binding ConfirmarEliminaciones}"
                                          Content="⚠️ Confirmar antes de eliminar registros"/>

                                <CheckBox Style="{StaticResource ModernCheckBox}"
                                          IsChecked="{Binding MostrarAyudas}"
                                          Content="💡 Mostrar tooltips y ayudas"/>

                                <Label Content="Formato de números de socio:" Style="{StaticResource ModernLabel}" Margin="0,15,0,5"/>
                                <ComboBox Style="{StaticResource ModernComboBox}"
                                          ItemsSource="{Binding FormatosNumeroSocio}"
                                          SelectedValue="{Binding FormatoNumeroSocioSeleccionado}"
                                          DisplayMemberPath="Display"
                                          SelectedValuePath="Value"
                                          Margin="0,0,0,15"/>

                                <Label Content="Numeración automática:" Style="{StaticResource ModernLabel}" Margin="0,15,0,5"/>
                                <CheckBox Style="{StaticResource ModernCheckBox}"
                                          IsChecked="{Binding NumeracionAutomatica}"
                                          Content="🔢 Asignar números de socio automáticamente"/>
                            </StackPanel>
                        </Border>

                        <!-- Información del Sistema -->
                        <Border Style="{StaticResource ModernBorder}" Margin="0,0,0,20">
                            <StackPanel>
                                <Label Content="ℹ️ Información del Sistema" Style="{StaticResource SectionTitle}"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Label Grid.Row="0" Grid.Column="0" Content="Versión:" Style="{StaticResource ModernLabel}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding VersionSistema}" 
                                               Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" Margin="10,0"/>

                                    <Label Grid.Row="1" Grid.Column="0" Content="Base de Datos:" Style="{StaticResource ModernLabel}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding RutaBaseDatos}" 
                                               Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" Margin="10,0"/>

                                    <Label Grid.Row="2" Grid.Column="0" Content="Tamaño BD:" Style="{StaticResource ModernLabel}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding TamañoBaseDatos}" 
                                               Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" Margin="10,0"/>

                                    <Label Grid.Row="3" Grid.Column="0" Content="Último Backup:" Style="{StaticResource ModernLabel}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding UltimoBackup}" 
                                               Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" Margin="10,0"/>

                                    <Label Grid.Row="4" Grid.Column="0" Content="Total Registros:" Style="{StaticResource ModernLabel}"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding TotalRegistros}" 
                                               Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" Margin="10,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Herramientas -->
                        <Border Style="{StaticResource ModernBorder}">
                            <StackPanel>
                                <Label Content="🛠️ Herramientas de Mantenimiento" Style="{StaticResource SectionTitle}"/>

                                <UniformGrid Columns="2" Margin="0,10">
                                    <Button Content="💾 Crear Backup Manual" 
                                            Style="{StaticResource ModernButton}"
                                            Command="{Binding CreateBackupCommand}"
                                            Margin="0,0,10,10"/>

                                    <Button Content="📁 Abrir Carpeta Backups" 
                                            Style="{StaticResource ModernButton}"
                                            Command="{Binding OpenBackupsFolderCommand}"
                                            Margin="10,0,0,10"/>

                                    <Button Content="🔄 Optimizar Base de Datos" 
                                            Style="{StaticResource ModernButton}"
                                            Command="{Binding OptimizeDatabaseCommand}"
                                            Margin="0,10,10,0"/>

                                    <Button Content="📊 Generar Reporte" 
                                            Style="{StaticResource ModernButton}"
                                            Command="{Binding GenerateReportCommand}"
                                            Margin="10,10,0,0"/>
                                </UniformGrid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Tab: Licencia -->
            <TabItem Header="🔐 Licencia" Style="{StaticResource TabStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                    <Border Style="{StaticResource ModernBorder}">
                        <StackPanel>
                            <Label Content="🔐 Estado de la Licencia" Style="{StaticResource SectionTitle}"/>

                            <Border Background="{Binding LicenseStatusColor}" 
                                    CornerRadius="10" Padding="20" Margin="0,10,0,20">
                                <StackPanel>
                                    <TextBlock Text="{Binding LicenseStatusText}" 
                                               FontSize="18" FontWeight="Bold" 
                                               Foreground="White" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding LicenseDetails}" 
                                               FontSize="14" 
                                               Foreground="White" 
                                               HorizontalAlignment="Center"
                                               Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>

                            <UniformGrid Columns="2" Margin="0,10">
                                <Button Content="🔑 Cambiar Licencia" 
                                        Style="{StaticResource ModernButton}"
                                        Command="{Binding ChangeLicenseCommand}"
                                        Margin="0,0,10,0"/>

                                <Button Content="ℹ️ Información de Licencia" 
                                        Style="{StaticResource ModernButton}"
                                        Command="{Binding ShowLicenseInfoCommand}"
                                        Margin="10,0,0,0"/>
                            </UniformGrid>

                            <Label Content="📋 Información de la Licencia" Style="{StaticResource SectionTitle}"/>

                            <Border Style="{StaticResource InfoBorder}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Label Grid.Row="0" Grid.Column="0" Content="Estado:" Style="{StaticResource ModernLabel}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding LicenseState}" 
                                               Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" Margin="10,0"/>

                                    <Label Grid.Row="1" Grid.Column="0" Content="Club:" Style="{StaticResource ModernLabel}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding LicenseClubName}" 
                                               Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" Margin="10,0"/>

                                    <Label Grid.Row="2" Grid.Column="0" Content="Expira:" Style="{StaticResource ModernLabel}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding LicenseExpiration}" 
                                               Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" Margin="10,0"/>

                                    <Label Grid.Row="3" Grid.Column="0" Content="Modo:" Style="{StaticResource ModernLabel}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding LicenseMode}" 
                                               Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" Margin="10,0"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="🔄 Restaurar" 
                    Style="{StaticResource CancelButton}"
                    Command="{Binding RestoreDefaultsCommand}"
                    Margin="0,0,15,0"/>
            <Button Content="❌ Cancelar" 
                    Style="{StaticResource CancelButton}"
                    IsCancel="True"
                    Click="CancelButton_Click" 
                    Margin="0,0,15,0"/>
            <Button Content="✅ Guardar Cambios" 
                    Style="{StaticResource SuccessButton}"
                    IsDefault="True"
                    Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>
</Window>