<UserControl x:Class="ClubManager.Views.UsuariosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:ClubManager.Views"
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <!-- Convertidores para roles -->
        <local:RolToColorConverter x:Key="RolToColorConverter"/>
        <local:ActiveToColorConverter x:Key="ActiveToColorConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource ModernBorder}" CornerRadius="8,8,0,0" Margin="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Label Content="👤 Gestión de Usuarios" 
                           Foreground="{DynamicResource ForegroundBrush}" 
                           FontSize="20" FontWeight="Bold" Margin="0"/>
                    <TextBlock Text="{Binding SubTitle}" 
                               Foreground="{DynamicResource MutedBrush}" 
                               FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="➕ Nuevo Usuario" 
                            Style="{StaticResource SuccessButton}"
                            Command="{Binding NewUserCommand}"
                            IsEnabled="{Binding CanEdit}"
                            Margin="0,0,10,0"/>
                    <Button Content="🔧 Permisos" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding ManagePermissionsCommand}"
                            IsEnabled="{Binding HasSelectedUser}"
                            Margin="0,0,10,0"/>
                    <Button Content="🔑 Cambiar Contraseña" 
                            Style="{StaticResource WarningButton}"
                            Command="{Binding ChangePasswordCommand}"
                            IsEnabled="{Binding HasSelectedUser}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filtros y Búsqueda -->
        <Border Grid.Row="1" 
                Background="{DynamicResource BorderBrush}" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Label Content="🔍 Buscar:" 
                           Foreground="{DynamicResource ForegroundBrush}" 
                           FontSize="12" Margin="0"/>
                    <TextBox Style="{StaticResource ModernTextBox}"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Buscar por nombre de usuario"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <Label Content="Rol:" 
                           Foreground="{DynamicResource ForegroundBrush}" 
                           FontSize="12" Margin="0"/>
                    <ComboBox Style="{StaticResource ModernComboBox}"
                              ItemsSource="{Binding RolesFilter}"
                              SelectedValue="{Binding SelectedRolFilter}"
                              DisplayMemberPath="Display"
                              SelectedValuePath="Value"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="15,0,0,0">
                    <Label Content="Estado:" 
                           Foreground="{DynamicResource ForegroundBrush}" 
                           FontSize="12" Margin="0"/>
                    <ComboBox Style="{StaticResource ModernComboBox}"
                              ItemsSource="{Binding EstadoFilter}"
                              SelectedValue="{Binding SelectedEstadoFilter}"
                              DisplayMemberPath="Display"
                              SelectedValuePath="Value"/>
                </StackPanel>

                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="🗑️ Limpiar" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding ClearFiltersCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="📊 Auditoría" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding ShowAuditCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="2" Style="{StaticResource ModernBorder}" CornerRadius="0,0,8,8" Margin="0,0,0,0">
            <DataGrid x:Name="dgUsuarios"
                      Style="{StaticResource DataGridStyle}"
                      ItemsSource="{Binding UsuariosFiltered}"
                      SelectedItem="{Binding SelectedUser}"
                      ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}">

                <DataGrid.Columns>
                    <!-- Nombre de Usuario -->
                    <DataGridTextColumn Header="Usuario" 
                                        Binding="{Binding NombreUsuario}" 
                                        Width="150"/>

                    <!-- Rol con color -->
                    <DataGridTemplateColumn Header="Rol" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Rol, Converter={StaticResource RolToColorConverter}}" 
                                        CornerRadius="12" Padding="8,4">
                                    <TextBlock Text="{Binding Rol}" 
                                               Foreground="White" 
                                               FontSize="10" 
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Estado -->
                    <DataGridTemplateColumn Header="Estado" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Activo, Converter={StaticResource ActiveToColorConverter}}" 
                                        CornerRadius="4" Padding="6,2">
                                    <TextBlock Text="{Binding EstadoTexto}" 
                                               Foreground="White" 
                                               FontSize="10"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Fecha de Creación -->
                    <DataGridTextColumn Header="Fecha Creación" 
                                        Binding="{Binding FechaCreacion, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                        Width="120"/>

                    <!-- Último Acceso -->
                    <DataGridTextColumn Header="Último Acceso" 
                                        Binding="{Binding UltimoAcceso, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" 
                                        Width="140"/>

                    <!-- Total de Acciones -->
                    <DataGridTextColumn Header="Acciones" 
                                        Binding="{Binding TotalAcciones}" 
                                        Width="80"/>

                    <!-- Permisos -->
                    <DataGridTemplateColumn Header="Permisos" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔧" ToolTip="Gestión" 
                                               Visibility="{Binding TienePermisoGestion}" 
                                               Margin="2"/>
                                    <TextBlock Text="👥" ToolTip="Abonados" 
                                               Visibility="{Binding TienePermisoAbonados}" 
                                               Margin="2"/>
                                    <TextBlock Text="📊" ToolTip="Reportes" 
                                               Visibility="{Binding TienePermisoReportes}" 
                                               Margin="2"/>
                                    <TextBlock Text="⚙️" ToolTip="Configuración" 
                                               Visibility="{Binding TienePermisoConfiguracion}" 
                                               Margin="2"/>
                                    <TextBlock Text="🔐" ToolTip="Usuarios" 
                                               Visibility="{Binding TienePermisoUsuarios}" 
                                               Margin="2"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Acciones -->
                    <DataGridTemplateColumn Header="Acciones" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="✏️" 
                                            Style="{StaticResource ModernButton}"
                                            Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding DataContext.CanEdit, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            ToolTip="Editar usuario"
                                            Margin="2" Padding="6,4"/>

                                    <Button Content="{Binding ToggleButtonText}" 
                                            Style="{Binding ToggleButtonStyle}"
                                            Command="{Binding DataContext.ToggleUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding DataContext.CanEdit, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            ToolTip="{Binding ToggleButtonTooltip}"
                                            Margin="2" Padding="6,4"/>

                                    <Button Content="🗑️" 
                                            Style="{StaticResource DangerButton}"
                                            Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding DataContext.CanEdit, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Visibility="{Binding CanDelete}"
                                            ToolTip="Eliminar usuario"
                                            Margin="2" Padding="6,4"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding Activo}" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>