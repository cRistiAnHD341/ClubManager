<UserControl x:Class="ClubManager.Views.UsuariosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:ClubManager.Views"
             Background="#FF2D2D30">

    <UserControl.Resources>
        <!-- Estilos -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF004578"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF6C757D"/>
                                <Setter Property="Foreground" Value="#FFAAAAAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FFDC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC82333"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFA71E2A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF218838"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF1E7E34"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FFFF9800"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF57C00"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFE65100"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#FF3F3F46"/>
            <Setter Property="RowBackground" Value="#FF1E1E1E"/>
            <Setter Property="AlternatingRowBackground" Value="#FF2D2D30"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#FF005A9E"/>
        </Style>

        <!-- Convertidores para roles -->
        <local:RolToColorConverter x:Key="RolToColorConverter"/>
        <local:ActiveToColorConverter x:Key="ActiveToColorConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF1E1E1E" CornerRadius="8,8,0,0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Label Content="👤 Gestión de Usuarios" 
                           Foreground="White" FontSize="20" FontWeight="Bold" Margin="0"/>
                    <TextBlock Text="{Binding SubTitle}" 
                               Foreground="#FFCCCCCC" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="➕ Nuevo Usuario" 
                            Style="{StaticResource SuccessButton}"
                            Command="{Binding NewUserCommand}"
                            IsEnabled="{Binding CanEdit}"
                            Margin="0,0,10,0"/>
                    <Button Content="🔧 Permisos" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding ManagePermissionsCommand}"
                            IsEnabled="{Binding HasSelectedUser}"
                            Margin="0,0,10,0"/>
                    <Button Content="🔑 Cambiar Contraseña" 
                            Style="{StaticResource WarningButton}"
                            Command="{Binding ChangePasswordCommand}"
                            IsEnabled="{Binding HasSelectedUser}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filtros y Búsqueda -->
        <Border Grid.Row="1" Background="#FF1A1A1A" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Label Content="🔍 Buscar:" Foreground="White" FontSize="12" Margin="0"/>
                    <TextBox Style="{StaticResource ModernTextBox}"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Buscar por nombre de usuario"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <Label Content="Rol:" Foreground="White" FontSize="12" Margin="0"/>
                    <ComboBox Style="{StaticResource ModernComboBox}"
                              ItemsSource="{Binding RolesFilter}"
                              SelectedValue="{Binding SelectedRolFilter}"
                              DisplayMemberPath="Display"
                              SelectedValuePath="Value"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="15,0,0,0">
                    <Label Content="Estado:" Foreground="White" FontSize="12" Margin="0"/>
                    <ComboBox Style="{StaticResource ModernComboBox}"
                              ItemsSource="{Binding EstadoFilter}"
                              SelectedValue="{Binding SelectedEstadoFilter}"
                              DisplayMemberPath="Display"
                              SelectedValuePath="Value"/>
                </StackPanel>

                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="🗑️ Limpiar" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding ClearFiltersCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="📊 Auditoría" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding ShowAuditCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="2" Background="#FF1E1E1E" CornerRadius="0,0,8,8" Margin="0,1,0,0">
            <DataGrid x:Name="dgUsuarios"
                      Style="{StaticResource DataGridStyle}"
                      ItemsSource="{Binding UsuariosFiltered}"
                      SelectedItem="{Binding SelectedUser}"
                      ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}">

                <DataGrid.Columns>
                    <!-- Nombre de Usuario -->
                    <DataGridTextColumn Header="Usuario" 
                                        Binding="{Binding NombreUsuario}" 
                                        Width="150"/>

                    <!-- Rol con color -->
                    <DataGridTemplateColumn Header="Rol" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Rol, Converter={StaticResource RolToColorConverter}}" 
                                        CornerRadius="12" Padding="8,4">
                                    <TextBlock Text="{Binding Rol}" 
                                               Foreground="White" 
                                               FontSize="10" 
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Estado -->
                    <DataGridTemplateColumn Header="Estado" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Activo, Converter={StaticResource ActiveToColorConverter}}" 
                                        CornerRadius="4" Padding="6,2">
                                    <TextBlock Text="{Binding EstadoTexto}" 
                                               Foreground="White" 
                                               FontSize="10"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Fecha de Creación -->
                    <DataGridTextColumn Header="Fecha Creación" 
                                        Binding="{Binding FechaCreacion, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                        Width="120"/>

                    <!-- Último Acceso -->
                    <DataGridTextColumn Header="Último Acceso" 
                                        Binding="{Binding UltimoAcceso, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" 
                                        Width="140"/>

                    <!-- Total de Acciones -->
                    <DataGridTextColumn Header="Acciones" 
                                        Binding="{Binding TotalAcciones}" 
                                        Width="80"/>

                    <!-- Permisos -->
                    <DataGridTemplateColumn Header="Permisos" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔧" ToolTip="Gestión" 
                                               Visibility="{Binding TienePermisoGestion}" 
                                               Margin="2"/>
                                    <TextBlock Text="👥" ToolTip="Abonados" 
                                               Visibility="{Binding TienePermisoAbonados}" 
                                               Margin="2"/>
                                    <TextBlock Text="📊" ToolTip="Reportes" 
                                               Visibility="{Binding TienePermisoReportes}" 
                                               Margin="2"/>
                                    <TextBlock Text="⚙️" ToolTip="Configuración" 
                                               Visibility="{Binding TienePermisoConfiguracion}" 
                                               Margin="2"/>
                                    <TextBlock Text="🔐" ToolTip="Usuarios" 
                                               Visibility="{Binding TienePermisoUsuarios}" 
                                               Margin="2"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Acciones -->
                    <DataGridTemplateColumn Header="Acciones" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="✏️" 
                                            Style="{StaticResource ModernButton}"
                                            Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding DataContext.CanEdit, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            ToolTip="Editar usuario"
                                            Margin="2" Padding="6,4"/>

                                    <Button Content="{Binding ToggleButtonText}" 
                                            Style="{Binding ToggleButtonStyle}"
                                            Command="{Binding DataContext.ToggleUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding DataContext.CanEdit, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            ToolTip="{Binding ToggleButtonTooltip}"
                                            Margin="2" Padding="6,4"/>

                                    <Button Content="🗑️" 
                                            Style="{StaticResource DangerButton}"
                                            Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding DataContext.CanEdit, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Visibility="{Binding CanDelete}"
                                            ToolTip="Eliminar usuario"
                                            Margin="2" Padding="6,4"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF007ACC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3F3F46"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding Activo}" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>