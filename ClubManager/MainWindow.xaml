<Window x:Class="ClubManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                Background="{DynamicResource HeaderBackgroundBrush}" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image Source="{Binding ClubLogo}" Width="40" Height="40" Margin="0,0,15,0" 
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <StackPanel VerticalAlignment="Center">
                        <Label Content="{Binding ClubName}" 
                               Foreground="{DynamicResource ForegroundBrush}" 
                               FontSize="18" FontWeight="Bold" Margin="0"/>
                        <TextBlock Text="{Binding CurrentSeason}" 
                                   Foreground="{DynamicResource MutedBrush}" 
                                   FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{Binding LicenseStatusColor}" CornerRadius="3" Padding="8,4" Margin="0,0,15,0">
                        <TextBlock Text="{Binding LicenseStatusText}" Foreground="White" FontSize="11" FontWeight="Bold"/>
                    </Border>
                    <TextBlock Text="{Binding CurrentUser}" 
                               Foreground="{DynamicResource MutedBrush}" 
                               VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button Content="{Binding ThemeService.CurrentThemeText}" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding ThemeService.ToggleThemeCommand}"
                            ToolTip="Cambiar tema" 
                            Margin="0,0,10,0"/>
                    <Button Content="⚙️ Configuración" 
                            Style="{StaticResource ModernButton}" 
                            Command="{Binding OpenSettingsCommand}" 
                            Margin="0,0,10,0"/>
                    <Button Content="🚪 Salir" 
                            Style="{StaticResource ModernButton}" 
                            Command="{Binding ExitCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Menu Lateral -->
        <Border Grid.Row="1" Grid.Column="0" 
                Background="{DynamicResource SidebarBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Label Content="📊 GESTIÓN" 
                           Foreground="{DynamicResource AccentBrush}" 
                           FontWeight="Bold" Margin="20,20,20,10"/>

                    <Button Content="🏠 Dashboard" Style="{StaticResource MenuButton}" 
                            Command="{Binding ShowDashboardCommand}"/>
                    <Button Content="👥 Abonados" Style="{StaticResource MenuButton}" 
                            Command="{Binding ShowAbonadosCommand}"/>
                    <Button Content="🎫 Tipos de Abono" Style="{StaticResource MenuButton}" 
                            Command="{Binding ShowTiposAbonoCommand}"
                            IsEnabled="{Binding CanEdit}"/>

                    <Separator Background="{DynamicResource BorderBrush}" Margin="10,15"/>

                    <Label Content="👥 ORGANIZACIÓN" 
                           Foreground="{DynamicResource AccentBrush}" 
                           FontWeight="Bold" Margin="20,10,20,10"/>

                    <Button Content="🏢 Gestores" Style="{StaticResource MenuButton}" 
                            Command="{Binding ShowGestoresCommand}"
                            IsEnabled="{Binding CanEdit}"/>
                    <Button Content="🎪 Peñas" Style="{StaticResource MenuButton}" 
                            Command="{Binding ShowPeñasCommand}"
                            IsEnabled="{Binding CanEdit}"/>

                    <Separator Background="{DynamicResource BorderBrush}" Margin="10,15"/>

                    <Label Content="🔧 SISTEMA" 
                           Foreground="{DynamicResource AccentBrush}" 
                           FontWeight="Bold" Margin="20,10,20,10"/>

                    <Button Content="👤 Usuarios" Style="{StaticResource MenuButton}" 
                            Command="{Binding ShowUsuariosCommand}"
                            IsEnabled="{Binding CanEdit}"/>
                    <Button Content="📜 Historial" Style="{StaticResource MenuButton}" 
                            Command="{Binding ShowHistorialCommand}"/>
                    <Button Content="🔄 Nueva Temporada" Style="{StaticResource MenuButton}" 
                            Command="{Binding NewSeasonCommand}"
                            IsEnabled="{Binding CanEdit}"/>

                    <Separator Background="{DynamicResource BorderBrush}" Margin="10,15"/>

                    <Label Content="🔐 LICENCIA" 
                           Foreground="{DynamicResource AccentBrush}" 
                           FontWeight="Bold" Margin="20,10,20,10"/>

                    <Button Content="🔑 Cambiar Licencia" Style="{StaticResource MenuButton}" 
                            Command="{Binding ChangeLicenseCommand}"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Contenido Principal -->
        <Border Grid.Row="1" Grid.Column="1" 
                Background="{DynamicResource BackgroundBrush}" 
                Margin="10">
            <ContentControl Content="{Binding CurrentView}"/>
        </Border>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Grid.ColumnSpan="2" 
                   Background="{DynamicResource SecondaryBackgroundBrush}">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="{DynamicResource ForegroundBrush}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding TotalAbonados, StringFormat='Total Abonados: {0}'}" 
                               Foreground="{DynamicResource ForegroundBrush}" 
                               Margin="0,0,20,0"/>
                    <TextBlock Text="{Binding AbonadosActivos, StringFormat='Activos: {0}'}" 
                               Foreground="{DynamicResource ForegroundBrush}" 
                               Margin="0,0,20,0"/>
                    <TextBlock Text="{Binding CurrentDateTime}" 
                               Foreground="{DynamicResource ForegroundBrush}" 
                               Margin="0,0,10,0"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>